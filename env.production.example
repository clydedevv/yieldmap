NODE_ENV=production
APP_ENV=prod
PORT=3001
SQLITE_PATH=/opt/yieldmap/data/strategies.db
ENABLE_LIVE=true
POLL_CADENCE=hourly

# Production database settings
DB_WAL_MODE=true
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=daily

# Logging
LOG_LEVEL=info
LOG_FILE=/opt/yieldmap/logs/app.log

# Performance
CACHE_TTL=300
MAX_CONNECTIONS=100

# Security
ADMIN_AUTH_REQUIRED=true
