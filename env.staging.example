NODE_ENV=production
APP_ENV=staging
PORT=3100
SQLITE_PATH=/opt/yieldmap-staging/data/strategies.staging.db
ENABLE_LIVE=true
POLL_CADENCE=daily

# Staging database settings
DB_WAL_MODE=true
DB_BACKUP_ENABLED=false
DB_BACKUP_INTERVAL=never

# Logging
LOG_LEVEL=debug
LOG_FILE=/opt/yieldmap-staging/logs/app.log

# Performance (lower for staging)
CACHE_TTL=60
MAX_CONNECTIONS=50

# Security (more permissive for testing)
ADMIN_AUTH_REQUIRED=false

# Staging-specific settings
STAGING_BANNER=true
NOINDEX=true
